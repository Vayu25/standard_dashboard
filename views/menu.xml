<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- 1️⃣ Define the action to load your JS view -->
    <record id="action_custom_sale_dashboard" model="ir.actions.client">
        <field name="name">Sale Orders Dashboard</field>
        <field name="tag">verts_standard_dashboard.action</field>
    </record>

    <!-- 2️⃣ Create a brand new top-level menu -->
    <menuitem id="menu_verts_dashboard_root"
              name="Verts Dashboard"
              sequence="10"/>

    <!-- 3️⃣ Submenu linking to the JS dashboard -->
    <menuitem id="menu_verts_dashboard_sales"
              name="Sales Dashboard"
              parent="menu_verts_dashboard_root"
              action="action_custom_sale_dashboard"
              sequence="1"/>
</odoo>
