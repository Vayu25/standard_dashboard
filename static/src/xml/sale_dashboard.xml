<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="verts_standard_dashboard.SaleOrderDashboard">
        <div class="p-5 text-center" style="background-color:#f8f9fa;min-height:100vh;">
            <h2 class="mb-2 text-primary fw-bold">Sale Order Status</h2>
            <p class="text-muted">View total sale orders grouped by current status</p>

            <button class="btn btn-outline-primary mt-2 mb-4"
                    t-on-click="onClickRefresh">
                ðŸ”„ Refresh Data
            </button>

            <t t-if="state.isLoading">
                <div>Loading...</div>
            </t>
            <t t-else="">
                <div class="d-flex justify-content-center flex-wrap gap-4">
                    <t t-foreach="state.saleStats" t-as="stat" t-key="stat.key">
                        <div class="card shadow-sm p-4 text-center"
                             style="width:180px;border-radius:15px;">
                            <h6 class="text-uppercase text-secondary mb-1">
                                <t t-esc="stat.label"/>
                            </h6>
                            <h3 class="mt-2 text-dark fw-bold">
                                <t t-esc="stat.count"/>
                            </h3>
                        </div>
                    </t>
                </div>
                <p class="mt-3 text-muted small">Last updated: <t t-esc="state.lastUpdated"/></p>
            </t>
        </div>
    </t>
</templates>
