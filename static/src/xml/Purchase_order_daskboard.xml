<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="verts_standard_dashboard.PurchaseOrderDashboard">
        <div class="o_purchase_dashboard container-fluid py-4">

            <!-- Header -->
            <div class="text-center mb-4">
                <h2 class="fw-bold display-6 text-warning">
                    Purchase Order Status
                </h2>
                <p class="text-muted">
                    View total purchase orders grouped by current status
                </p>
            </div>

            <!-- Refresh Button -->
            <div class="d-flex justify-content-center mb-4">
                <button class="btn btn-outline-warning px-4 shadow-sm fw-semibold" 
                        t-on-click="onClickRefresh">
                    ðŸ”„ Refresh Data
                </button>
            </div>

            <!-- Purchase Order Cards -->
            <div class="d-flex flex-wrap justify-content-center gap-4">
                <t t-foreach="state.purchaseStats" t-as="stat" t-key="stat.key">
                    <div class="card border-0 shadow-lg rounded-4 text-center" 
                         style="width:220px; transition: transform 0.3s; cursor:pointer;">
                        <div class="card-body py-4">
                            <h5 class="text-uppercase text-secondary mb-2">
                                <t t-esc="stat.label"/>
                            </h5>
                            <h2 class="fw-bold text-warning mb-0">
                                <t t-esc="stat.count"/>
                            </h2>
                        </div>
                    </div>
                </t>
            </div>

            <!-- No Purchase Orders -->
            <t t-if="!state.purchaseStats.length">
                <div class="text-center mt-5 text-secondary">
                    <i>No Purchase Orders Found</i>
                </div>
            </t>

        </div>
    </t>
</templates>
